<div>
  <h1>Follower User</h1>
  <table>
      <thead>
          <tr>
              <th>image</th>
              <th>name</th>
          </tr>
      </thead>
      <tbody>
          <% @users.each do |user| %>
          <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td>フォロー数: <%= user.followings.count %></td>
              <td>フォロワー数: <%= user.followers.count %></td>
              <td><%= link_to "Show", users_path %></td>
          </tr>
          <% end %>
      </tbody>
  </table>
</div>